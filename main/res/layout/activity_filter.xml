<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FilterActivity">

    <Spinner
        android:id="@+id/categorySelectionSpinner"
        android:layout_width="222dp"
        android:layout_height="22dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFilterByCategory" />

    <TextView
        android:id="@+id/textViewFilterByCategory"
        android:layout_width="124dp"
        android:layout_height="26dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="144dp"
        android:text="Filter By Category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFilterByPay"
        android:layout_width="128dp"
        android:layout_height="26dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="142dp"
        android:text="Filter By Pay Salary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categorySelectionSpinner" />

    <TextView
        android:id="@+id/seekBarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="177dp"
        android:text="Pay amount: $50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarPay" />

    <SeekBar
        android:id="@+id/seekBarPay"
        android:layout_width="153dp"
        android:layout_height="22dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="129dp"
        android:max="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFilterByPay" />

    <Button
        android:id="@+id/buttonFilterCatAndSal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="160dp"
        android:text="Filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarPay" />

</androidx.constraintlayout.widget.ConstraintLayout>