<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TextView
        android:id="@+id/jobApplicationTitle"
        android:layout_width="66dp"
        android:layout_height="35dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="31dp"
        android:text="Apply"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/jobApplicationHeading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jobApplicationJobTitle"
        android:layout_width="302dp"
        android:layout_height="25dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="13dp"
        android:text="Job Title"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/jobApplicationCoverLetterTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobApplicationHeading" />

    <TextView
        android:id="@+id/jobApplicationCoverLetterTitle"
        android:layout_width="303dp"
        android:layout_height="25dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="13dp"
        android:text="Cover Letter"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/jobApplicationCoverLetterText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobApplicationJobTitle" />

    <EditText
        android:id="@+id/jobApplicationCoverLetterText"
        android:layout_width="308dp"
        android:layout_height="110dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="51dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/jobApplicationSubmitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobApplicationCoverLetterTitle" />

    <TextView
        android:id="@+id/jobApplicationHeading"
        android:layout_width="306dp"
        android:layout_height="23dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="13dp"
        android:text="Job Title:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/jobApplicationJobTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobApplicationTitle" />

    <Button
        android:id="@+id/jobApplicationSubmitButton"
        android:layout_width="99dp"
        android:layout_height="54dp"
        android:layout_marginStart="159dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="196dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobApplicationCoverLetterText" />
</androidx.constraintlayout.widget.ConstraintLayout>